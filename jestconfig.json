{
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom" : [
    "src/**/*.ts",
    "!src/database/*/*.ts",
    "!src/**/*.deleted.ts",
    "!src/**/*.doc.ts"
  ],
  "collectCoverage": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
